
@using PagedList.Mvc;
@model PagedList.PagedList<DAO.Model.ComboFoodDetail>


@{
    ViewBag.Title = "ComboFood";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/ContentAdmin/admin.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/PagedList.css" />

<div class="container-fluid">
    @section titlepage{
        Combo food detail Page
    }
    <div class="mt-2 mb-3 row">
        <div class="col-md-5">
            <a href="@Url.Action("InsertComboFood", "ComboDetail")" class="btn btn-outline-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>
            </a>
        </div>
        <div class="col-md-7">
            @using (Html.BeginForm("ComboFood", "ComboDetail", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-md-5 input-group pt-1">
                        <input class="w-50 form-control" type="search" placeholder="Search here..." required="" name="search">
                    </div>
                    <div class="col-md-2 pt-1">
                        <button class="btn btn-outline-success" value="" type="submit">Search</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered mr-2">
            <thead class="text-center">
                <tr style="background: #ebffff ">
                    <th>Serial</th>
                    <th>Id Combo</th>
                    <th>Id Food</th>
                    <th>Price</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.IdCombo </td>
                        <td>@item.IdFood</td>
                        <td>@item.Price</td>
                        <td>
                            <a href="~/Admin/ComboDetail/DeleteFood/@item.Id" class="btn btn-outline-danger" style="color: #000000;">
                                <span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                    </svg>
                                </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-4">
            @Html.PagedListPager(Model, page => Url.Action("ComboFood", new { page }))
        </div>
        <div class="col-md-2 p">
            <a href="@Url.Action("ComboIndex", "Combos")" class="btn btn-back"> Back </a>
        </div>
    </div>
</div>


