
@using PagedList.Mvc;
@model PagedList.PagedList<DAO.Model.ComboFoodDetail>


@{
    ViewBag.Title = "ComboFood";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<link href="~/Areas/ContentAdmin/admin.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/PagedList.css" />

<div class="container-fluid">
    @section titlepage{
        combo Food detail Page
    }
    <div class="mt-2 mb-3 row">
        <div class="col-md-5">
            <a href="@Url.Action("InsertComboFood", "ComboDetail")" class="btn btn-outline-info">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
                    <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>
            </a>
        </div>
        <div class="col-md-7">
            <form action="#" method="post" class="newsletter row">
                <div class="col-md-5"></div>
                <div class="col-md-5 input-group pt-1">
                    <input class="w-50 form-control" type="search" placeholder="Search here..." required="">
                </div>
                <div class="col-md-2 pt-1">
                    <button class="btn btn-outline-success" value="" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered mr-2">
            <thead class="text-center">
                <tr style="background: #ebffff ">
                    <th>Serial</th>
                    <th>Id Combo</th>
                    <th>Id Food</th>
                    <th>Price</th>
                    <th colspan="2">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.IdCombo </td>
                        <td>@item.IdFood</td>
                        <td>@item.Price</td>
                        <td>
                            <a href="~/Admin/ComboDetail/EditComboFood/@item.Id">
                                <span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                                    </svg>
                                </span>
                            </a>
                        </td>
                        <td>
                            <a href="~/Admin/ComboDetail/Delete/@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="row">
        <div class="col-md-4">
            @Html.PagedListPager(Model, page => Url.Action("ComboFood", new { page }))
        </div>
        <div class="col-md-2 p">
            <a href="@Url.Action("ComboIndex", "Combos")" class="btn btn-back"> Back </a>
        </div>
    </div>
</div>


