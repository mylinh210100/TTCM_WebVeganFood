@using PagedList.Mvc;
@model PagedList.PagedList<DAO.Model.Order>

@{
    ViewBag.Title = "ViewOrder";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/css/admin.css" />
<link rel="stylesheet" href="~/Content/PagedList.css" />

<div class="container-fluid">
    @section titlepage{
        Order view Page
    }
    <div class="row mb-2">
        <div class="col-md-5"></div>
        <div class="col-md-7">
            <form action="#" method="post" class="newsletter row">
                <div class="col-md-5"></div>
                <div class="col-md-5 input-group pt-1">
                    <input class="w-50 form-control" type="search" placeholder="Search here..." required="">
                </div>
                <div class="col-md-2 pt-1">
                    <button class="btn btn-outline-success" value="" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered mr-2">
            <thead>
                <tr style="background: #ebffff ">
                    <th>ID</th>
                    <th>Id customer</th>
                    <th>Date</th>
                    <th>Sum of Product (dishes)</th>
                    <th>Id Foundation</th>
                    <th>Total Payment ($)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdOrder</td>
                        <td>@item.IdCustomer</td>
                        <td>@(item.Date.HasValue?item.Date.Value.ToString("dd/MM/yyyy hh:mm:ss") : "")</td>
                        <td>@item.SumOfProduct</td>
                        <td>@item.IdFoundation</td>
                        <td>@item.TotalCash</td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model, page => Url.Action("ViewOrder", new { page }))
    </div>
</div>

