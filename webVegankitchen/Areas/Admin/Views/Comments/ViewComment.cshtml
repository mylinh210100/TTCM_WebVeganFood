
@using PagedList.Mvc;
@model PagedList.PagedList<DAO.Model.Comment>

@{
    ViewBag.Title = "ViewComment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link href="~/Areas/ContentAdmin/admin.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/PagedList.css" />

<div class="container-fluid">
    @section titlepage{
        Comment view Page
    }
    <div class="row mb-2">
        <div class="col-md-5"></div>
        <div class="col-md-7">
            @using (Html.BeginForm("ViewComment", "Comments", FormMethod.Get))
            {
                <div class="row">
                    <div class="col-md-5 input-group pt-1">
                        <input class="w-50 form-control" type="search" placeholder="Search here..." required="" name="search" value="@ViewBag.keyword">
                    </div>
                    <div class="col-md-2 pt-1">
                        <button class="btn btn-outline-success" value="" type="submit">Search</button>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered text-center mr-2">
            <thead>
                <tr style="background: #ebffff ">
                    <th>Id Product</th>
                    <th>Comments</th>
                    <th>Id User</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdProduct</td>
                        <td>@item.Comments</td>
                        <td>@item.IdAcc</td>
                    </tr>
                }
            </tbody>
        </table>
        @Html.PagedListPager(Model, page => Url.Action("ViewComment", new { page , search = ViewBag.keyword}))
    </div>
</div>

