@model IEnumerable<DAO.Model.Comment>
@{
    ViewBag.Title = "ViewComment";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Content/css/admin.css" />

<div class="container-fluid">
    <div>
        <h2 style="font-family: 'Times New Roman'; font-weight: bold; font-size: 30px; color: #ff0000">Comment page</h2>
    </div>
    <div class="row">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id Product</th>
                    <th>Comments</th>
                    <th>Username</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdProduct</td>
                        <td>@item.Comments</td>
                        <td>@item.UserName</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

