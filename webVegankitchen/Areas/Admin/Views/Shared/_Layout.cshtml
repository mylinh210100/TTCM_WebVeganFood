
<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>VeganFood</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap.css">
    <link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
    <link href="~/Areas/ContentAdmin/admin.css" rel="stylesheet" />
</head>

<body>
    <div class="main-sec inner-page" style="background: #87a9cc ">
        <!-- //header -->
        <header id="home">
            <div class="container">
                <div class="top-w3pvt d-flex">
                    <div id="logo">
                        <h1 style="font-weight: bold; font-size:50px; font-family:'Times New Roman'">
                            <span style="color: #000000">
                                VeganFood
                            </span>
                        </h1>
                    </div>
                    <div class="forms ml-auto">
                        <a href="@Url.Action("Logout", "HomeAdmin")" class="btn btn-outline-dark mt-3">Log Out</a>
                    </div>
                </div>
            </div>
        </header>
    </div>

    <div class="mt-3 row">
        <div class="col-lg-2 list">
            <ul class="list-group ml-2 mr-2">
                <li class="list-group-item list-group-item-action list-group-item-primary">
                    <a href="@Url.Action("ViewCustomer", "Customers")" class="btn">Customer</a>
                </li>
                <li class="list-group-item list-group-item-action">
                    <a href="@Url.Action("AccIndex", "Account")" class="btn">Account</a>
                </li>
                <li class="list-group-item list-group-item-action list-group-item-primary">
                    <a href="@Url.Action("FoundationIndex", "Foundation")" class="btn">Foundation</a>
                </li>
                <li class="list-group-item list-group-item-action">
                    <a href="@Url.Action("FoodIndex", "Foods")" class="btn">Foods</a>
                </li>
                <li class="list-group-item list-group-item-action list-group-item-primary">
                    <a href="@Url.Action("DrinkIndex", "Drinks")" class="btn">Drinks</a>
                </li>
                <li class="list-group-item list-group-item-action">
                    <a href="@Url.Action("ComboIndex", "Combos")" class="btn">Combo</a>
                </li>
                <li class="list-group-item list-group-item-action list-group-item-primary">
                    <a href="@Url.Action("ViewOrder", "Orders")" class="btn">Orders</a>
                </li>
                <li class="list-group-item list-group-item-action">
                    <a href="@Url.Action("ViewComment", "Comments")" class="btn">Comments</a>
                </li>
                <li class="list-group-item list-group-item-action list-group-item-primary">
                    <a href="@Url.Action("Index", "Statistics")" class="btn">Statistics</a>
                </li>
            </ul>
        </div>
        <div class="col-lg-10">
            <div class="row mb-3">
                <div class="col-md-5 ml-2">
                    <h2 style="font-family: 'Times New Roman'; font-weight: bold; font-size: 30px; color: #b71c1c ">@RenderSection("titlepage", required: true)</h2>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Content/ckfinder/ckfinder.js"></script>
    @RenderSection("jsFooter", required: false)

</body>
</html>


