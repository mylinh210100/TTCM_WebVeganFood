
<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>VeganFood</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap.css">
    <link href="//fonts.googleapis.com/css?family=Hind:300,400,500,600,700" rel="stylesheet">
    <link href="~/Content/css/admin.css" rel="stylesheet" />
</head>

<body>
    <div class="main-sec inner-page" style=" background: #dedddd">
        <!-- //header -->
        <header class="header" id="home">
            <div class="container">
                <div class="top-w3pvt d-flex" >
                    <div id="logo">
                        <h1 style="font-weight: bold; font-size:50px; font-family:'Times New Roman'">
                                <span style="color:#1e9d2f">
                                    VeganFood
                                </span>
                        </h1>
                    </div>
                    <div class="forms ml-auto">
                        @Html.ActionLink("Log out", "Logout", "Login", new { @class = "btn mt-2" })
                    </div>
                </div>
            </div>
        </header>
    </div>

    <div class="mt-3 row">
        <div class="col-md-2 list">
            <ul class="list-group">
                <li class="list-group-item">@Html.ActionLink("Customer", "ViewCustomer", "Customers")</li>
                <li class="list-group-item">@Html.ActionLink("Account", "AccIndex", "Account")</li>
                <li class="list-group-item">@Html.ActionLink("Foundation", "FoundationIndex", "Foundation")</li>
                <li class="list-group-item">@Html.ActionLink("Foods", "FoodIndex", "Foods")</li>
                <li class="list-group-item">@Html.ActionLink("Drinks", "DrinkIndex", "Drinks")</li>
                <li class="list-group-item">@Html.ActionLink("Combo", "ComboIndex", "Combos")</li>
                <li class="list-group-item">@Html.ActionLink("Order", "ViewOrder", "Orders")</li>
                <li class="list-group-item">@Html.ActionLink("Comment", "ViewComment", "Comments")</li>
            </ul>
        </div>
        <div class="col-md-10">
            <div>
                <h2 style="font-family: 'Times New Roman'; font-weight: bold; font-size: 30px; color: #ff0000">@RenderSection("titlepage", required: true)</h2>
            </div>
            @RenderBody()
        </div>
    </div>

</body>
</html>


